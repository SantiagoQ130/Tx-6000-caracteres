import machine
import utime
from machine import UART, Pin

# Configuración del UART
uart = UART(0, baudrate=42000, tx=Pin(0), rx=Pin(1))

# Configuración del LED
led = machine.Pin("LED", machine.Pin.OUT)  # LED integrado en la Raspberry Pi Pico

def Envio_TXT(DATOS):
    # Abrir el archivo en modo lectura
    with open(100_lineas_60caracteres, 'r') as Archivo_Random:
        mensaje = Archivo_Random.read()  # Leer todo el contenido del archivo
        led.on()  # Encender el LED
        uart.write(mensaje)  # Enviar el contenido por UART
        utime.sleep(0.1)  # Espera 0.1 segundos para asegurar los datos enviados 
        led.off()  # Apagar el LED
        print("Archivo enviado")

# Llamar a la función para enviar el archivo
Envio_TXT('100_lineas_60caracteres.txt')
